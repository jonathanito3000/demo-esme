<div class="clas-row">
    <div class="col-md-3 center-block no-float">
      <h2><i class="fa fa-user-circle"></i> Registrarse</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form"}) do |f| %>
            <%= devise_error_messages! %>
            <%#mostrar los errores de session %>
            <% if session[:omniauth_erros]%>
                <div class="flash">
                    <%= session[:omniauth_erros]%>
                </div>
            <%end%>

            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control", value: get_email_oauth %>
            </div>

            <div class="field form-group">
              <%= f.label :username %><br />
              <%= f.text_field :username, class: "form-control", value: get_username_oauth %>
            </div>

            <div class="field form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="actions text-center">
              <%= f.submit "Registrarse", class: "btn btn-success" %>
            </div>
          <% end %>
            <div class="text-center">
              <%= render "devise/shared/links" %>
          </div>

    </div>
</div>
